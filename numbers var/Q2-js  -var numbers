
 if (localStorage.getItem('visitCount')) {
        // If exists, increment the count
        count = parseInt(localStorage.getItem('visitCount')) + 1;
    } else {
        // If not, initialize to 1
        let count = 1;
    }

    // Update the count in localStorage
    localStorage.setItem('visitCount', count);

    // Display the count
    let message = "You have visited this site " + count + " times";
    alert(message);
    document.write("<h3>" + message + "</h3>");
